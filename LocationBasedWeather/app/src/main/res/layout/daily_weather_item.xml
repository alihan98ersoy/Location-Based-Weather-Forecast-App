<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor">
    android:clipToPadding=”false”
    android:paddingBottom=”@dimen/cardview_default_elevation”
    android:paddingTop=”@dimen/cardview_default_elevation”>

    <androidx.cardview.widget.CardView
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:gravity="center|top"
                android:text="London"
                android:textColor="@color/daynight_textColor"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/weather_condition_icon"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/backgroundColor"
                android:foreground="@drawable/ic_wi_cloudy"
                android:src="@drawable/ic_wi_day_sunny"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/weather_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:gravity="center"
                android:text="Sunny"
                android:textColor="@color/daynight_textColor"
                android:textSize="20sp"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:gravity="center"
                android:text="30 °C"
                android:textColor="@color/daynight_textColor"
                android:textSize="36sp"
                app:layout_constraintStart_toStartOf="@+id/location"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

